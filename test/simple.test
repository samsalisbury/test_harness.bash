#!/usr/bin/env bash

# These are the fundamental tests. This test file itself is tested specially, ensuring
# that all 3 tests are run and that we exit with a zero exit code, both when running this
# by itself, and when running with ./test_harness.bash.

set -euo pipefail

# shellcheck disable=SC1090
source "${TESTHARNESS:-../test_harness.bash}"

(
  begin_test ok/empty
)

(
  begin_test ok/true
  true
)

(
  begin_test ok/run-echo
  run echo 1
)
